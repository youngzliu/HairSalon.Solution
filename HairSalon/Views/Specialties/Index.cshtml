@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Hair Salon Management Portal</h1>
<h1>Current specialties:</h1>
<ul>
  @if (Model.Count == 0){
    <p>There are no specialties currently!</p>
  }
  else
  {
    @foreach (Specialty specialty in Model)
    {
      <li><strong><a href='/specialties/@specialty.GetID()'>@specialty.GetDescription()</a></strong></li>
    }
  }
</ul>

<a href="/specialties/new" class="btn btn-success">Add a specialty</a>
