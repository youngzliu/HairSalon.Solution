@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Add a new client to @Model.GetFirstName() @Model.GetLastName()</h1>
<form action='/stylists/@Model.GetID()/clients' method='post'>
  <input id='stylistID' name='stylistID' type='hidden' value='@Model.GetID()'>
  <div class="form-group">
    <label for="firstName">First Name:</label>
    <input id="firstName" name="firstName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="lastName">Last Name:</label>
    <input id="lastName" name="lastName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="phoneNumber">Phone Number:</label>
    <input id="phoneNumber" name="phoneNumber" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input id="email" name="email" type="text" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-info">Go!</button>
</form>
