@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Hair Salon Management Portal</h1>
<h1>Current clients:</h1>
<ul>
  @if (Model.Count == 0){
    <p>There are no clients currently!</p>
  }
  else
  {
    @foreach (Client client in Model)
    {
      <li><strong><a href='/stylists/@client.GetStylistID()/clients/@client.GetID()'>@client.GetFirstName() @client.GetLastName()</a></strong></li>
    }
  }
</ul>

<form action="/clients/delete" method="post">
  <button type="submit" name="button" class="btn btn-danger">Delete all clients</button>
</form>
