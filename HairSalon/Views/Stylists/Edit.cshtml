@{
  Layout = "_Layout";
}

<h1>Hair Salon Management Portal</h1>
<hr>

<h2>Edit stylist: @Model.GetFirstName() @Model.GetLastName()</h2>
<form action="/stylists/@Model.GetID()" method="post">
  <div class="form-group">
    <label for="firstName">First Name:</label>
    <input id="firstName" name="firstName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="lastName">Last Name:</label>
    <input id="lastName" name="lastName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="phoneNumber">Phone Number:</label>
    <input id="phoneNumber" name="phoneNumber" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input id="email" name="email" type="text" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-info">Edit:</button>
</form>
